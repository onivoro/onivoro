{
  "compileOnSave": false,
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ESNext",
    "typeRoots": ["node_modules/@types"],
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@onivoro/angular-common": ["libs/angular-common/src/index.ts"],
      "@onivoro/angular-serializable-forms": [
        "libs/angular-serializable-forms/src/index.ts"
      ],
      "@onivoro/angular-styles": ["libs/angular-styles/src/index.ts"],
      "@onivoro/isomorphic-common": ["libs/isomorphic-common/src/index.ts"],
      "@onivoro/server-aws-auth": ["libs/server-aws-auth/src/index.ts"],
      "@onivoro/server-aws-dynamo": ["libs/server-aws-dynamo/src/index.ts"],
      "@onivoro/server-aws-lambda": ["libs/server-aws-lambda/src/index.ts"],
      "@onivoro/server-aws-s3": ["libs/server-aws-s3/src/index.ts"],
      "@onivoro/server-aws-ses": ["libs/server-aws-ses/src/index.ts"],
      "@onivoro/server-build": ["libs/server-build/src/index.ts"],
      "@onivoro/server-common": ["libs/server-common/src/index.ts"],
      "@onivoro/server-disk": ["libs/server-disk/src/index.ts"],
      "@onivoro/server-ffmpeg": ["libs/server-ffmpeg/src/index.ts"],
      "@onivoro/server-file": ["libs/server-file/src/index.ts"],
      "@onivoro/server-multer-s3": ["libs/server-multer-s3/src/index.ts"],
      "@onivoro/server-parameterization": [
        "libs/server-parameterization/src/index.ts"
      ],
      "@onivoro/server-process": ["libs/server-process/src/index.ts"],
      "@onivoro/server-typeorm-postgres": [
        "libs/server-typeorm-postgres/src/index.ts"
      ],
      "@onivoro/server-yt-dl": ["libs/server-yt-dl/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
